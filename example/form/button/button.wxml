<view class="container">
    <view class="doc-title h3">Button 按钮</view>
    <!-- 模块 -->
    <view class="example-title">主题按钮</view>
    <view class="example-content">
        <button class="btn btn-default">默认按钮</button>
        <button class="btn btn-dashed">虚线按钮</button>
        <button class="btn btn-primary">主要按钮</button>
        <button class="btn btn-success">成功按钮</button>
        <button class="btn btn-info">提示按钮</button>
        <button class="btn btn-warn">警告按钮</button>
        <button class="btn btn-danger">危险按钮</button>
        <button class="btn btn-link">链接按钮</button>
        <button class="btn disabled">禁用按钮</button>
    </view>
    <!-- 模块 -->
    <view class="example-title">主题文字</view>
    <view class="example-content">
        <view class="text-link">链接文字</view>
        <view class="text-primary">主要文字</view>
        <view class="text-success">成功文字</view>
        <view class="text-info">提示文字</view>
        <view class="text-warn">警告文字</view>
        <view class="text-danger">危险文字</view>
    </view>
    <!-- 模块 -->
    <view class="example-title">边框按钮</view>
    <view class="example-content">
        <button class="btn btn-primary-outline">主要按钮</button>
        <button class="btn btn-success-outline">成功按钮</button>
        <button class="btn btn-info-outline">提示按钮</button>
        <button class="btn btn-warn-outline">警告按钮</button>
        <button class="btn btn-danger-outline">危险按钮</button>
    </view>
    <!-- 模块 -->
    <view class="example-title">带动画正在处理中按钮</view>
    <view class="example-content">
        <button class="btn btn-primary loading">
            <text class="wexui-loading1"></text>正在处理中
        </button>
    </view>
    <!-- 模块 -->
    <view class="example-title">图标按钮</view>
    <view class="example-content">
        <button class="btn btn-primary">
            <icon type="success" size="18" color="#fff" />官方图标按钮
        </button>
        <button class="btn btn-primary">
            <image src="../../images/cut.png" />使用图片按钮
        </button>
        <button class="btn btn-primary">
            <text class="icon icon-save"></text>字体图标按钮
        </button>
        <button class="btn btn-primary">
            <text class="icon icon-delete"></text>字体图标按钮
        </button>
        <button class="btn btn-default-outline">
            <text class="icon icon-edit"></text>字体图标按钮
        </button>
        <button class="btn btn-dashed">
            <text class="icon icon-delete"></text>字体图标按钮
        </button>
    </view>
    <!-- 模块 -->
    <view class="example-title">尺寸</view>
    <view class="example-content">
        <button class="btn btn-success size-big btn-block">大按钮</button>
        <button class="btn btn-primary btn-block">默认大小</button>
        <button class="btn btn-danger size-small btn-block">小按钮</button>
        <button class="btn btn-danger size-mini btn-block">迷你按钮</button>
    </view>
</view>